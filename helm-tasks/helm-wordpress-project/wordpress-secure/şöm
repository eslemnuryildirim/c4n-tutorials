---
# Source: wordpress-secure/templates/secret.yaml
apiVersion: v1
kind: Secret
metadata:
  name: my-wp-test-db-secret
  labels:
    app: wordpress
type: Opaque
data:
  # Helm otomatik olarak base64'e encode eder
  mysql-root-password: "TXlSb290UGFzc3dvcmQxMjM="
  mysql-password: "TXlXb3JkUHJlc3NQYXNzd29yZDQ1Ng=="
  mysql-user: "d3B1c2Vy"
  mysql-database: "d29yZHByZXNzX2Ri"
---
# Source: wordpress-secure/templates/mariadb-pvc.yaml
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: my-wp-test-mariadb-pvc
  labels:
    app: mariadb
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
---
# Source: wordpress-secure/templates/wordpress-pvc.yaml
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: my-wp-test-wordpress-pvc
  labels:
    app: wordpress
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
---
# Source: wordpress-secure/templates/mariadb-service.yaml
apiVersion: v1
kind: Service
metadata:
  name: my-wp-test-mariadb
  labels:
    app: mariadb
spec:
  ports:
  - port: 3306
    targetPort: 3306
  selector:
    app: mariadb
  clusterIP: None
---
# Source: wordpress-secure/templates/wordpress-service.yaml
apiVersion: v1
kind: Service
metadata:
  name: my-wp-test-wordpress
  labels:
    app: wordpress
spec:
  type: NodePort
  ports:
  - port: 80
    targetPort: 80
    nodePort: 30080
  selector:
    app: wordpress
---
# Source: wordpress-secure/templates/mariadb-deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-wp-test-mariadb
  labels:
    app: mariadb
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mariadb
  template:
    metadata:
      labels:
        app: mariadb
    spec:
      containers:
      - name: mariadb
        image: mariadb:10.11
        env:
        # Secret'tan şifreleri okuyoruz! ✅
        - name: MYSQL_ROOT_PASSWORD
          valueFrom:
            secretKeyRef:
              name: my-wp-test-db-secret
              key: mysql-root-password
        - name: MYSQL_PASSWORD
          valueFrom:
            secretKeyRef:
              name: my-wp-test-db-secret
              key: mysql-password
        - name: MYSQL_USER
          valueFrom:
            secretKeyRef:
              name: my-wp-test-db-secret
              key: mysql-user
        - name: MYSQL_DATABASE
          valueFrom:
            secretKeyRef:
              name: my-wp-test-db-secret
              key: mysql-database
        ports:
        - containerPort: 3306
          name: mysql
        volumeMounts:
        - name: mariadb-data
          mountPath: /var/lib/mysql
      volumes:
      - name: mariadb-data
        persistentVolumeClaim:
          claimName: my-wp-test-mariadb-pvc
---
# Source: wordpress-secure/templates/wordpress-deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-wp-test-wordpress
  labels:
    app: wordpress
spec:
  replicas: 1
  selector:
    matchLabels:
      app: wordpress
  template:
    metadata:
      labels:
        app: wordpress
    spec:
      containers:
      - name: wordpress
        image: wordpress:6.4-apache
        env:
        - name: WORDPRESS_DB_HOST
          value: my-wp-test-mariadb:3306
        # Secret'tan database bilgilerini okuyoruz! ✅
        - name: WORDPRESS_DB_USER
          valueFrom:
            secretKeyRef:
              name: my-wp-test-db-secret
              key: mysql-user
        - name: WORDPRESS_DB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: my-wp-test-db-secret
              key: mysql-password
        - name: WORDPRESS_DB_NAME
          valueFrom:
            secretKeyRef:
              name: my-wp-test-db-secret
              key: mysql-database
        ports:
        - containerPort: 80
          name: http
        volumeMounts:
        - name: wordpress-data
          mountPath: /var/www/html
      volumes:
      - name: wordpress-data
        persistentVolumeClaim:
          claimName: my-wp-test-wordpress-pvc
